<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cs.dit.mapper.ReplyMapper">  
   
   <insert id="insert" parameterType="cs.dit.domain.ReplyVO" useGeneratedKeys="true" keyProperty="number">
    insert into tbl_board_reply (board_num, content, writer) values (#{board_num}, #{content}, #{writer})
</insert>

    
    <select id="read" resultType="cs.dit.domain.ReplyVO">
        select * from tbl_board_reply where bno = #{bno}
    </select>
    
    <update id="update" parameterType="cs.dit.domain.ReplyVO">
        update tbl_board_reply set content = #{content} 
        where number = #{number}
    </update>
    
    <select id="get" parameterType="cs.dit.domain.ReplyVO" resultType="cs.dit.domain.ReplyVO">
        select * from tbl_board_reply where number = #{number}
    </select>
    
   <select id="getListPage" resultType="cs.dit.domain.ReplyVO" >
    	select * from tbl_board_reply where board_num = #{bno} order by number desc limit 0, 10
	</select>
    
      
    <delete id="remove" parameterType="cs.dit.domain.ReplyVO">
        delete from tbl_board_reply where number = #{number}
    </delete>
</mapper>